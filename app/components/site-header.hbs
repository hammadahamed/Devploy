  {{!-- header -begin --}}
  <div class="menu bg-headerbg sticky top-0"> 

    <div class="md:flex">
      <div class="flex flex-grow md:flex-none justify-between bg-darkHeaderBg py-1.5 px-5">
      <div class="flex items-center opacity-95">
      {{#link-to "index"}}
          <h1 class="rounded-full text-gray-200 hover:text-gray-100 transform hover:scale-95 py-1 px-4 overflow-hidden text-lg font-bold font-nunito bg-headerbg">Devploy</h1>
      {{/link-to}}      
      </div>   

      {{!-- hamburger - begin --}}
        <div class="cursor-pointer md:hidden py-3 px-3 flex items-center" {{on "click" this.toggle}} id="burger">
            <a href="#">
                <svg class="cl w-6 h-6 text-gray-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
            </a>                        
        </div>
        {{!-- hamburger - end --}}
        
    </div> 

    {{!-- menu - start --}}

    <div class="h-0 {{if this.toggleMenu.isOpen "opacity-95" "h-0 opacity-0 overflow-hidden"}} transition ease-out duration-100 md:flex flex-grow md:opacity-95 md:h-auto" {{on 'click' this.toggle}}>
        <div class=" md:flex text-center justify-center md:justify-between bg-darkHeaderBg md:flex-grow py-5 md:py-0 px-5 items-center transition ease-out transform duration-1000 ">
        {{!-- left content - start --}}
        <div class="md:block">
            <ul class="block md:flex items-center">
                <li class="md:mr-4 cl ">
                {{#link-to "about" class="menu-about"}}
                    About
                {{/link-to}}
                </li>
                <li class="md:mr-4 cl">
                {{#link-to "contact" class="menu-contact"}}
                    Contact
                {{/link-to}}
                </li>
            </ul>     
            </div>
        {{!-- left content - end --}}
        {{!-- right content - end --}}
        <div>
            <ul class="block md:flex items-center">
            <li {{on 'click' this.toggleMenu.loginMode}} class="md:ml-4 cursor-pointer cl">
                {{#link-to "auth" class="menu-contact"}}
                    Login
                {{/link-to}}
            </li>
            <li {{on 'click' this.toggleMenu.signupMode}} class="md:ml-4 cursor-pointer cl">
                {{#link-to "auth" class="menu-contact"}}
                    Signup
                {{/link-to}}
            </li>
            </ul>
        </div>

        {{!-- right content - end --}}
        </div>
    </div>
    
    {{!-- menu - end --}}
    </div>   
    
  </div>
  {{!-- header - end --}}